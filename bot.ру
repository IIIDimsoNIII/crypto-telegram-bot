import os
import logging
from telegram import Update
from telegram.ext import ApplicationBuilder, CommandHandler, ContextTypes
print("=== BOT BOOT ===")
print("Python OK. CWD:", os.getcwd())
print("Files:", os.listdir("."))
print("BOT_TOKEN present:", bool(os.getenv("BOT_TOKEN")))
# –õ–æ–≥–∏
logging.basicConfig(
    format="%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    level=logging.INFO,
)

# –¢–æ–∫–µ–Ω –±–µ—Ä—ë—Ç—Å—è –∏–∑ –ø–µ—Ä–µ–º–µ–Ω–Ω–æ–π –æ–∫—Ä—É–∂–µ–Ω–∏—è
BOT_TOKEN = os.getenv("BOT_TOKEN")

if not BOT_TOKEN:
    raise RuntimeError("BOT_TOKEN is not set")

async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    await update.message.reply_text(
        "üëã –ü—Ä–∏–≤–µ—Ç!\n\n"
        "–Ø –∑–∞–ø—É—â–µ–Ω –∏ —Ä–∞–±–æ—Ç–∞—é ‚úÖ\n"
        "–°–∫–æ—Ä–æ –∑–¥–µ—Å—å –±—É–¥—É—Ç:\n"
        "‚Ä¢ –∫—Ä–∏–ø—Ç–æ-–Ω–æ–≤–æ—Å—Ç–∏\n"
        "‚Ä¢ –∞–ª–µ—Ä—Ç—ã —Ä–µ–∑–∫–∏—Ö –¥–≤–∏–∂–µ–Ω–∏–π\n"
        "‚Ä¢ –µ–∂–µ–¥–Ω–µ–≤–Ω—ã–µ —Å–≤–æ–¥–∫–∏\n\n"
        "–û—Å—Ç–∞–≤–∞–π—Å—è –Ω–∞ —Å–≤—è–∑–∏ üöÄ"
    )

def main():
    app = ApplicationBuilder().token(BOT_TOKEN).build()
    app.add_handler(CommandHandler("start", start))
print("=== START POLLING ===")
    app.run_polling()

if __name__ == "__main__":
    main()
